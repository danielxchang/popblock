{
  "name": "PopBlock",
  "description": "Blocks all popups and new tabs.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/web16.png",
      "32": "/images/web32.png",
      "48": "/images/web48.png",
      "128": "/images/web128.png"
    }
  },
  "commands": {
    "toggle_btn": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle button to activate/deactivate."
    }
  },
  "icons": {
    "16": "/images/web16.png",
    "32": "/images/web32.png",
    "48": "/images/web48.png",
    "128": "/images/web128.png"
  }
}
